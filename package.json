{
  "name": "gavindizon",
  "version": "1.0.0",
  "description": "Gavin Dizon's personal website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"> 5%\" -o css/style.prefix.css css/style.concat.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "keywords": [
    "website",
    "sass",
    "css",
    "html",
    "javascript"
  ],
  "author": "Gavin Dizon",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-cli-simple": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gavindizon/gavindizon.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/gavindizon/gavindizon.github.io/issues"
  },
  "homepage": "https://github.com/gavindizon/gavindizon.github.io#readme"
}
